type Post {
    id: ID!
    title: String!
    text: String!
    category: String
    author: User!
}

type User {
    id: ID!
    name: String!
    posts: [Post]!
}

# The Root Query for the application
type Query {
    recentPosts(count: Int, offset: Int): [Post]!
    allUsers(count: Int, offset: Int): [User]!
}

# The Root Mutation for the application
type Mutation {
    writePost(title: String!, text: String!, category: String) : Post!
}